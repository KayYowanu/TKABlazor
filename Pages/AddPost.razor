@page "/addPost"
@inject IPostService postService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager
<h1>
    Add Post
</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Title: </label>
                <input for="Name" class="form-control" @bind-value="@tkaposts.Title" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Description: </label>
                <input for="Name" class="form-control" style="width:50%" @bind-value="@tkaposts.Description" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" @onclick="() => CreatePost()">Save Post</button>
                <button type="button" class="btn btn-danger" @onclick="() => cancel()">Cancel</button>
            </div>
        </form>
    </div>
</div>

@code {

    TKAPosts tkaposts = new TKAPosts();

    protected async Task CreatePost()
    {
        await postService.CreatePost(tkaposts);
        navigationManager.NavigateTo("/postlist");
    }

    void cancel()
    {
        navigationManager.NavigateTo("/postlist");
    }
}